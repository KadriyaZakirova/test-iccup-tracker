var Forum=new Class({initialize:function(){this.form=$('comment-form');var bred=$('reg-btn');if(bred){this.blee=bred.getElement("input[type=submit]");this.blee2=this.blee.value;if(this.blee)this.blee.addEvent('click',this.formsubmit.bind(this));}},formsubmit:function(e){e.stop();var that=this;this.blee2=this.blee.getProperty('value');this.blee.setProperty('value',localeLang.pleaseWait);this.blee.set('disabled','on');new Request({url:this.form.action,onSuccess:function(es){var newel=new Element('div',{html:es,class:''});this.tabl=$$('.comments')[0];newel.inject(this.tabl,'bottom');that.form.comment.value='';that.blee.setProperty('value',that.blee2);that.blee.removeProperty('disabled');}}).post(this.form);}});window.addEvent('domready',function(){});